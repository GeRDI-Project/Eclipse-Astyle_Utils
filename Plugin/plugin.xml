<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <!-- Format File - Command Definition -->
   <extension
         point="org.eclipse.ui.commands">
      <category
            name="AStyle"
            id="AStyle_Neon.commands.category">
      </category>
      <command
            name="AStyle Format"
            categoryId="AStyle_Neon.commands.category"
            id="AStyle_Neon.commands.formatFileCommand">
      </command>
   </extension>
   
   <!-- Format File - Handler Assignment -->
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="AStyle_Neon.commands.formatFileCommand"
            class="astyle_neon.handlers.FormatFileHandler">
      </handler>
   </extension>
   
   <!-- Format File - Key Binding -->
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="AStyle_Neon.commands.formatFileCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+5"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   
   <!-- Format File - Add to Explorer Menu -->
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.jdt.ui.PackageExplorer">
        <command
              commandId="AStyle_Neon.commands.formatFileCommand"
              mnemonic="S"
              id="AStyle_Neon.menus.formatFileCommand">
          <visibleWhen>
              	<with variable="activeMenuSelection">
        			<count value="1"/>
					<iterate ifEmpty="false">
						<or>
							<adapt type="org.eclipse.core.resources.IResource">
								<test property="org.eclipse.core.resources.name" value="*.java"/>
							</adapt>
							<adapt type="org.eclipse.core.resources.IContainer"/>
							<adapt type="org.eclipse.jdt.internal.core.PackageFragment"/>
						</or>
					</iterate>
				</with>
          </visibleWhen>
        </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.eclipse.ui.navigator.ProjectExplorer#PopupMenu?after=additions">
        <command
              commandId="AStyle_Neon.commands.formatFileCommand"
              mnemonic="S"
              style="push"
              id="AStyle_Neon.menus.formatFileCommand">
              <visibleWhen>
	              	<with variable="activeMenuSelection">
        				<count value="1"/>
						<iterate ifEmpty="false">
							<or>
								<adapt type="org.eclipse.core.resources.IResource">
									<test property="org.eclipse.core.resources.name" value="*.java"/>
								</adapt>
								<adapt type="org.eclipse.core.resources.IContainer"/>
								<adapt type="org.eclipse.jdt.internal.core.PackageFragment"/>
							</or>
						</iterate>
					</with>
	          </visibleWhen>
        </command>
      </menuContribution>
   </extension>




   <!-- Format Project - Command Definition -->
   <extension
         point="org.eclipse.ui.commands">
      <category
            name="AStyle"
            id="AStyle_Neon.commands.category">
      </category>
      <command
            name="AStyle Format Project"
            categoryId="AStyle_Neon.commands.category"
            id="AStyle_Neon.commands.formatProjectCommand">
      </command>
   </extension>
   
   <!-- Format Project - Handler Assignment -->
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="AStyle_Neon.commands.formatProjectCommand"
            class="astyle_neon.handlers.FormatProjectHandler">
      </handler>
   </extension>
   
   <!-- Format Project - Key Binding -->
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="AStyle_Neon.commands.formatProjectCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   
   <!-- Preferences Page -->
   <extension
      point = "org.eclipse.ui.preferencePages">
       <page id="org.eclipse.ui.examples.readmetool.Page1"
	    class="astyle_neon.preferences.AStylePreferencePage"
            name="AStyle">
       </page>
   </extension>

</plugin>
