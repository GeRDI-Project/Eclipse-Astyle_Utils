<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="AStyle"
            id="AStyle_Neon.commands.category">
      </category>
      <command
            name="Format Project"
            categoryId="AStyle_Neon.commands.category"
            id="AStyle_Neon.commands.formatCommand">
      </command>
   </extension>
   
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="AStyle_Neon.commands.formatCommand"
            class="astyle_neon.handlers.FormattingHandler">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="AStyle_Neon.commands.formatCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.jdt.ui.PackageExplorer">
        <command
              commandId="AStyle_Neon.commands.formatCommand"
              mnemonic="S"
              id="AStyle_Neon.menus.formatCommand">
          <visibleWhen>
              	<with variable="activeMenuSelection">
					<iterate ifEmpty="false">
						<adapt type="org.eclipse.core.resources.IProject"/>
					</iterate>
				</with>
          </visibleWhen>
        </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.eclipse.ui.navigator.ProjectExplorer#PopupMenu?after=additions">
        <command
              commandId="AStyle_Neon.commands.formatCommand"
              mnemonic="S"
              style="push"
              id="AStyle_Neon.menus.formatCommand">
              <visibleWhen>
	              	<with variable="activeMenuSelection">
						<iterate ifEmpty="false">
								<adapt type="org.eclipse.core.resources.IProject"/>
						</iterate>
					</with>
	          </visibleWhen>
        </command>
      </menuContribution>
      <!--<menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="AStyle"
               mnemonic="M"
               id="astyle_neon.menus.astyleMenu">
            <command
                  commandId="AStyle_Neon.commands.formatCommand"
                  mnemonic="S"
                  id="AStyle_Neon.menus.formatCommand">
            </command>
         </menu>
      </menuContribution>-->
   </extension>
   
   <extension
      point = "org.eclipse.ui.preferencePages">
       <page id="org.eclipse.ui.examples.readmetool.Page1"
	    class="astyle_neon.preferences.AStylePreferencePage"
            name="AStyle">
       </page>
   </extension>

</plugin>
